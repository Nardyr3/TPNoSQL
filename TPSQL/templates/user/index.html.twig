{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div class="col-lg-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Liste des utilisateurs</h4>
            <div class="single-table">
                <div class="table-responsive">
                    <table class="table text-center">
                        <thead class="text-uppercase bg-secondary">
                            <tr class="text-white">
                                <th scope="col">{{ users|length }}</th>
                                <th scope="col">Pr√©nom</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Achats</th>
                            </tr>
                        </thead>
                        <tbody>

                        {% for user in users %}
                            <tr>
                                <th scope="row">{{ user.id }}</th>
                                <td>{{ user.first_name }}</td>
                                <td>{{ user.last_name }}</td>
                                <td>
                                    <a class="btn btn-sm btn-outline-secondary" href="/products/{{ user.id }}">
                                        <span class="me-1" data-feather="shopping-cart"></span>
                                        Voir
                                    </a>
                                </td>                                
                            </tr>
                        {% endfor %}
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}

