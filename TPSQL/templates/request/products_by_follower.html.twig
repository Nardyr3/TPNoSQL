{% extends 'base.html.twig' %}

{% block title %}Achats{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 mb-2">
    <div class="btn-toolbar">
        <a class="btn btn-sm btn-outline-secondary" href="/request">
            <span class="me-1" data-feather="arrow-left"></span>
            Retour
        </a>

    </div>
</div>

<div class="col-lg-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">Requête {{ id }}. Temps d'exécution : {{ execTime }}</h4>
            <div class="single-table">
                <div class="table-responsive">
                    <table class="table text-center">
                        <thead class="text-uppercase bg-secondary">
                            <tr class="text-white">
                                <th scope="col">Nom du produit</th>
                                <th scope="col">Nombre d'achats</th>
                            </tr>
                        </thead>
                        <tbody>

                        {% for product in products %}
                            <tr class="table-light">
                                <th scope="row">{{ product.name }}</th>
                                <td>{{ product.nb }}</td>
                            </tr>
                        {% endfor %}
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}