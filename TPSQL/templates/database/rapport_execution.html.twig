{% extends 'base.html.twig' %}

{% block title %}Base de données{% endblock %}

{% block body %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4 mb-2">
    <div class="btn-toolbar">
        <a class="btn btn-sm btn-outline-secondary" href="/database">
            <span class="me-1" data-feather="arrow-left"></span>
            Retour
        </a>

    </div>
</div>

<div class="col-lg-12 mt-5">
    <div class="card">
        <div class="card-body">
            <h4 class="header-title">{{ title }}. Temps d'exécution : {{ execTime }} secondes.</h4>
            <h6 class="card-subtitle mb-2 text-muted">Base de données {{ database }}</h6>
            {% for count in counter %}
                <div class="card w-75">
                    <div class="card-body">
                        <h5 class="card-title">{{ count.nom }}</h5>
                        <p class="card-text">{{ count.nombre }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}